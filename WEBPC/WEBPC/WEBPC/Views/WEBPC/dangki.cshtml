@model WEBPC.Models.khachhang

@{
    ViewBag.Title = "dangki";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}



@using (Html.BeginForm("dangki","WEBPC")) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Đăng kí thành viên </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Tên khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tenkh, new { htmlAttributes = new { @class = "form-control" } })
            <span class="field-validation-valid text-danger" data-valmsg-for="tenkh" data-valmsg-replace="false">@ViewBag.error</span>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Tên đăng nhập", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tendn, new { htmlAttributes = new { @class = "form-control" } })
           <span class="field-validation-valid text-danger" data-valmsg-for="tenkh" data-valmsg-replace="false">@ViewBag.error1</span>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.matkhau, new { htmlAttributes = new { @class = "form-control" } })
            <span class="field-validation-valid text-danger" data-valmsg-for="tenkh" data-valmsg-replace="false">@ViewBag.error2</span>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nhập lại mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Password("nhaplaimatkhau")
            <span class="field-validation-valid text-danger" data-valmsg-for="tenkh" data-valmsg-replace="false">@ViewBag.error3</span>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Giới tính", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
          
                <input name="gioitinh" type="radio" value="Nam" />Nam
                <input name="gioitinh" type="radio" value="Nữ" />Nữ
             
          
            <span class="field-validation-valid text-danger" data-valmsg-for="tenkh" data-valmsg-replace="false">@ViewBag.error4</span>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Số điện thoại", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.sodienthoai, new { htmlAttributes = new { @class = "form-control" } })
            <span class="field-validation-valid text-danger" data-valmsg-for="tenkh" data-valmsg-replace="false">@ViewBag.error5</span>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            <span class="field-validation-valid text-danger" data-valmsg-for="tenkh" data-valmsg-replace="false">@ViewBag.error6</span>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.diachi, new { htmlAttributes = new { @class = "form-control" } })
            <span class="field-validation-valid text-danger" data-valmsg-for="tenkh" data-valmsg-replace="false">@ViewBag.error7</span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại trang chủ", "Index")
</div>
