
@{
    Layout = null;
}
<style>
    a {
        color: #337ab7;
        text-decoration: none;
    }
</style>
<div style="height:450px" ;>
    @using (@Html.BeginForm("Login", "Home", FormMethod.Post))
    {

        <center>
            <table align="center">
                <tr>
                    <td colspan="2" align="center"><h2 style="align-items:center;font-size:30px;">Đăng nhập Admin</h2></td>
                </tr>
                <tr style="
    height: 30px;
    margin-top: 10px;">
                    <td>Tên đăng nhập: </td>
