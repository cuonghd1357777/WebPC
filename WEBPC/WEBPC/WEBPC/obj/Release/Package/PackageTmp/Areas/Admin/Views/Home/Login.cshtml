                </tr>
                <tr style="
    height: 30px;
    margin-top: 10px;">
                    <td>
                        Mật khẩu:
                    </td>
                    <td>  @Html.Password("txtmatkhau")</td>
                </tr>
                <tr style="margin-top:10px">
                    <td align="center">
                       
                    </td>
                    <td >
                        <input type="submit" id="btndangnhap" value="Đăng nhập" />
                    </td>
                </tr>

            </table>
            <label for="error" style="
    color: red;
    margin-top: 10px;
">@ViewBag.error </label>
</center>
}
</div>
