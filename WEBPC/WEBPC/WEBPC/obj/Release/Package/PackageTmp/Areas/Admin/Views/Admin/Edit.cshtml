@model WEBPC.Models.sanpham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thêm mới sản phẩm</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Mã sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" value="@Model.masp" readonly />

        </div>
    </div>
    <div class="form-group">
        @Html.Label("Tên sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.tensanpham, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="form-group">
        @Html.Label("Mô tả", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <textarea name="mota" rows="10" style="width:300px;">@Model.mota</textarea>

        </div>
    </div>
    <div class="form-group">
        @Html.Label("Hình ảnh", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img src="~/hinh anh/@Model.hinhanh" style="height:100px;" />
            @ViewBag.hienthi
            <input name="fFileUpload" type="file" />

        </div>
    </div>
    <div class="form-group">
        @Html.Label("Đơn giá", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="number" min="1" required name="dongia" value="@string.Format("{0}",@Model.dongia)" />
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Số lượng", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="number" min="1" required name="soluong" value="@Model.soluong" />

        </div>
    </div>
    <div class="form-group">
        @Html.Label("Ngày cập nhật", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="ngaycapnhat" type="datetime" value="@Convert.ToDateTime(@Model.ngaycapnhat)" />
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Bảo hành", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="baohanh" type="text"  value="@Model.baohanh"/>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Danh mục sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaDM")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay về trang sản phẩm", "Index")
</div>
